<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="15dp">

    <ScrollView
        android:id="@+id/access_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/separation_line_bottom"
        android:scrollbars="none" >

        <RelativeLayout
            android:id="@+id/access_scroll_view_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp">

            <Button
                android:id="@+id/access_switch_to_predefined_profiles_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#01485f"
                android:textColor="@color/white"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/preference_access_change_profile"
                android:onClick="switchToPredefinedProfiles"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"/>

            <View
                android:id="@+id/access_separation_line_switch_profiles"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/access_switch_to_predefined_profiles_button"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/access_label_active_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/access_separation_line_switch_profiles"
                android:text="@string/preference_access_active_profile" />

            <View
                android:id="@+id/access_separation_line_active_profile"
                android:layout_width="fill_parent"
                android:layout_height="1.0dp"
                android:layout_below="@+id/access_label_active_profile"
                android:background="@color/holo_blue_bright" />

            <LinearLayout
                android:id="@+id/access__active_profile"
                android:baselineAligned="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/access_separation_line_active_profile"
                android:weightSum="10"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/access_active_profile_image"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/com_facebook_profile_picture_blank_square" />

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8">

                    <TextView
                        android:id="@+id/access_active_profile_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_marginTop="15dp" />

                    <TextView
                        android:id="@+id/access_active_profile_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/access_active_profile_title" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/access_label_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/access__active_profile"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:text="@string/preference_access_settings" />

            <View
                android:id="@+id/access_separation_line_settings"
                android:layout_width="fill_parent"
                android:layout_height="1.0dp"
                android:layout_below="@+id/access_label_settings"
                android:background="@color/holo_blue_bright" />

            <LinearLayout
                android:id="@+id/access_fontface_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:clickable="true"
                android:onClick="showFontfaceDialog"
                android:layout_below="@+id/access_separation_line_settings">

                <TextView
                    android:id="@+id/access_preference_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/preference_access_title_fontface"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/access_preference_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/preference_access_summary_fontface"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <View
                android:id="@+id/access_separation_line_fontface"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey"
                android:layout_below="@+id/access_fontface_button"/>

            <ListView
                style="@style/ListViewShadowed"
                android:id="@+id/access_preference_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/access_separation_line_fontface"
                android:dividerHeight="1dp"
                android:divider="@color/transparent"
                android:layout_marginBottom="10dp"
                android:scrollbars="none"
                tools:ignore="NestedScrolling"/>

        </RelativeLayout>
    </ScrollView>

    <View
        android:id="@+id/separation_line_bottom"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/spritelist_separation_line_color"
        android:layout_above="@+id/scratch_project_apply_button" />

    <Button
        android:id="@+id/scratch_project_apply_button"
        android:onClick="applyProfile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/preference_access_apply_profile"
        android:textAlignment="center"
        android:background="#01485f"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp" />

</RelativeLayout>